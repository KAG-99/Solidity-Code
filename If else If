pragma solidity ^0.8.0;

contract array{

    function check(uint a) public pure returns(string memory)
    {
        string memory value;
        if(a>0)
        {
            value="a is greater than zero";
        }
        else if(a==0)
        {
            value="a is equal than zero";
        }
        else
        {
            value="a is less than zero";
        }
        return value;
    }
}
